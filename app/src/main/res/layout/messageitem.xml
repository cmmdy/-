<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rr"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rr1"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017年5月31日  频道公告"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:id="@+id/title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="频道owner"
            android:textSize="16sp"
            android:id="@+id/owner"
            android:layout_alignBottom="@+id/time"
            android:layout_alignStart="@+id/title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5月31日 17:04"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/owner"
            android:layout_marginStart="17dp"
            android:textSize="16sp"
            android:id="@+id/time" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/divide"
        android:layout_below="@+id/rr1"
        android:id="@+id/linearLayout4" />

    <TextView
        android:id="@+id/notice"
        android:textSize="17sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请请"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/notice"
        android:background="#eeeeee"
        android:orientation="horizontal"/>
</RelativeLayout>