<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/mytoolbar"
        android:id="@+id/mytoolbar"/>

    <LinearLayout
        android:layout_below="@id/mytoolbar"
        android:id="@+id/messagell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b9d6d6d6">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:text="频道名称"
            android:textSize="17sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messagell">


        <EditText
            android:id="@+id/sex_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="请输入频道名称"
            />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/situationll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/relativeLayout2"
        android:background="#b9d6d6d6">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="频道密码(选填)"
            android:textSize="17sp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <RelativeLayout

        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/situationll">


        <EditText
            android:id="@+id/sex_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="请输入频道密码(选填)"
            />

    </RelativeLayout>


</RelativeLayout>
