<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mytoolbar"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@color/colorPrimary">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">


        <ImageView
            android:visibility="invisible"
            android:id="@+id/mytoolbar_back"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/mytoolbar_back" />


        <TextView
            android:id="@+id/mytoolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="剧中 "
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/mytoolbar_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mytoolbar_title"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/mytoolbar_other"
            android:src="@drawable/mytoolbar_share"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/mytoolbar_other"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/mytoolbar_detail"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/mytoolbar_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mytoolbar_other"
            android:layout_toEndOf="@+id/mytoolbar_share"
            android:text="确定"
            android:textColor="@color/whitetransparent"
            android:textSize="16sp"
            android:visibility="invisible" />

        <ImageView
            android:visibility="invisible"
            android:scaleType="centerInside"
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:id="@+id/mytoolbar_message"
            android:src="@drawable/message"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>